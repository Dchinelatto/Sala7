<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/miTextView</item>
        <item name="android:actionBarStyle">@style/miActionBar</item>

    </style>

    <style name="DetalleActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/miTextView</item>
        <item name="android:actionBarStyle">@style/miActionBar</item>
        <item name="android:background">#fff</item>

    </style>

    <style name="miTextView">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#fff</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="miActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="splashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/spash_drawable</item>
    </style>

</resources>
